/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f0f0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 100rpx;
  font-family: "Courier New", Courier, monospace;
  color: #333;
}

.uploader {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-btn {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  background-color: #ff5722;
  color: white;
  border-radius: 50rpx;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  font-family: "Courier New", Courier, monospace;
}

.tip-text {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #888;
  font-family: "Courier New", Courier, monospace;
}

.pixel-btn {
  background-color: #7f7f7f; /* A gray base color */
  border: 4px solid #3b3b3b; /* Darker border */
  box-shadow: 
    inset -4px -4px 0px 0px #5a5a5a, /* Inner dark shadow */
    inset 4px 4px 0px 0px #a0a0a0;  /* Inner light shadow */
  color: white;
  font-family: "Minecraft", monospace; /* Use a pixel font if available, fallback to monospace */
  text-shadow: 2px 2px #3b3b3b; /* Dark text shadow for depth */
  font-size: 36rpx;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.1s ease-in-out;
  image-rendering: pixelated; /* Ensures images/gradients stay sharp */
  position: relative; /* Needed for the ::before pseudo-element */
  border-radius: 0; /* Remove default border-radius */
  
  /* Override and center content */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  line-height: 1; /* Reset line-height */
}

.pixel-btn:active, .pixel-btn:focus {
  background-color: #6e6e6e;
  box-shadow: 
    inset 4px 4px 0px 0px #5a5a5a, /* Invert shadow on press */
    inset -4px -4px 0px 0px #a0a0a0;
  outline: none;
  transform: translateY(2px); /* Move button down slightly on press */
}
